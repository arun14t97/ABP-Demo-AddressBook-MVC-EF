@page
@using AddressBook.Localization
@using Microsoft.Extensions.Localization
@model AddressBook.Web.Pages.Locations.CreateModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<AddressBookResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Location" asp-page="/Locations/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewLocation"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
